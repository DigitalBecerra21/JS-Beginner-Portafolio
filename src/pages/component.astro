---
interface Props 
{
	Header : string;
}

const { Header } = Astro.props;
---

	<body class="bg-slate-600">
		<div id="Presentation?">
			<h1 class="text-center p-2 text-3xl font-bold text-slate-300  bg-slate-500">
                {Header}
			</h1>
			<p class="text-center p-4  text-slate-300"> 
				Remember TailwindCSS changes the default font-family to sans
			</p>
		</div>

		<div id="WarningButton" class="text-center">
			<button class="hover:bg-slate-700 hover:text-black text-4xl text-white bg-red-600 p-7 rounded-full" 
			onclick="ShowWarning();">
			Press me!
		    </button>
 
		</div>

	</body>
